<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        tools:context=".vista">

    <LinearLayout
            android:layout_marginLeft="22sp"
            android:layout_marginTop="22sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

        />

        <EditText
                android:id="@+id/titulores"
                android:background="@drawable/estiloedit"
                android:layout_marginLeft="12sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:inputType="text"
        />


    </LinearLayout>

    <LinearLayout
            android:layout_marginLeft="22sp"
            android:layout_marginTop="22sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_marginTop="-70sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

        />

        <EditText
                android:id="@+id/desre"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginLeft="12sp"
                android:background="@drawable/estiloedit"
                android:inputType="text"
                android:padding="12sp" />


    </LinearLayout>

    <LinearLayout
            android:layout_marginLeft="22sp"
            android:layout_marginTop="22sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

        />

        <EditText
                android:id="@+id/autorres"
                android:background="@drawable/estiloedit"
                android:inputType="text"
                android:layout_marginLeft="12sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:textStyle="bold"
                android:textSize="18sp"
        />


    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="40sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar"
                android:layout_marginLeft="22sp"
                android:backgroundTint="#DC1212"
                android:paddingVertical="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="22sp"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:onClick="borrar"
        />

        <Button
                app:cornerRadius="22sp"
                android:paddingVertical="12sp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:layout_marginLeft="10sp"
                android:backgroundTint="#E8AA2F"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:onClick="actualizar"
        />


    </LinearLayout>


    <Button
            app:cornerRadius="40sp"
            android:paddingHorizontal="52sp"
            android:backgroundTint="#1E7EE3"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginTop="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="back"
            android:paddingVertical="8sp"
    />

</LinearLayout>